<div>
  <% if @product.errors.any? %>
  <div id="error_explanation">
    <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
</div>


<section>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="product_single">
        <h1>Edit product:</h1>
          <%= form_tag "/products/#{@product.id}", method: :patch do %>
            <div class="form-group">
              <%= label_tag :name %>
              <%= text_field_tag :name, @product.name, class: "form-control"  %>
            </div>
            <div class="form-group">
              <%= label_tag :price  %>
              <%= text_field_tag :price, @product.price, class: "form-control"  %>
            </div>
            <div class="form-group">
              <%= label_tag :description  %>
              <%= text_field_tag :description, @product.description, class: "form-control"  %>
            </div>
            <div class="form-group">
              <%= label_tag :image %>
              <%= text_field_tag :image, @product.image, class:"form-control" %>
            </div>
            <%= submit_tag "Update product", class: "btn btn-default" %>
          <% end %>
      </div>
    </div>
  </div>
</section>

